{
  "name": "brolostack",
  "version": "1.0.0",
  "type": "module",
  "description": "A Revolutionary, Zero-Cost Full-Stack Package Framework - Browser Local Stack",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.esm.js",
      "require": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "docs",
    "examples"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run type-check"
  },
  "keywords": [
    "full-stack",
    "framework",
    "browser",
    "local-storage",
    "zero-cost",
    "decentralized",
    "serverless",
    "ai-ready",
    "typescript",
    "javascript"
  ],
  "author": {
    "name": "Olu Akinnawo",
    "email": "olu@beunec.com",
    "url": "https://github.com/olustar"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Beunec/brolostack.git"
  },
  "bugs": {
    "url": "https://github.com/Beunec/brolostack/issues"
  },
  "homepage": "https://github.com/Beunec/brolostack#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "localforage": "^1.10.0",
    "nanoid": "^5.0.4",
    "zustand": "^4.4.7",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
